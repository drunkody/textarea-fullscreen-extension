{
    "manifest_version": 3,
    "name": "Textarea Fullscreen",
    "version": "2.0.0",
    "description": "Make any textarea fullscreen with React",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/index.jsx"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["icons/*.svg", "icons/*.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
