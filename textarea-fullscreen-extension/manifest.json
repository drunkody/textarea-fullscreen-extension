{
  "manifest_version": 3,
  "name": "Textarea Fullscreen",
  "version": "1.0.0",
  "description": "Make any textarea fullscreen with a single click",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/expand.svg",
        "icons/collapse.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}