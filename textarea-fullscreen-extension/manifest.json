{
  "manifest_version": 3,
  "name": "Textarea Fullscreen",
  "version": "1.0.1",
  "description": "Make any textarea fullscreen with a single click",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "textarea-fullscreen@yourname.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/expand.svg",
        "icons/collapse.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
